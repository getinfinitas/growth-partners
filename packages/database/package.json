{
  "name": "@infinitas/database",
  "version": "1.0.0",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema.sql"
  },
  "scripts": {
    "dev": "echo 'Database package - no dev server needed'",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > src/supabase.ts",
    "db:push": "supabase db push",
    "db:migrate": "supabase migration up",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0"
  },
  "devDependencies": {
    "supabase": "^1.190.0"
  }
}